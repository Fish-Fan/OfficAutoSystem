<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanyank.mapper.ChatMessageMapper">
    <insert id="insert" parameterType="com.fanyank.pojo.ChatMessage" useGeneratedKeys="true">
        insert into chat_message(cid,username,avatar,id,type,content,fromid,toid,timestamp)
        values(#{cid},#{username},#{avatar},#{id},#{type},#{content},#{fromid},#{toid},#{timestamp})
    </insert>
</mapper>